<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Hymns</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Welcome Back</h1>
                <p>Sign in to your Hymns account</p>
            </div>

            <% if (success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <% if (Array.isArray(success_msg)) { %>
                            <% success_msg.forEach(function(msg) { %>
                                <p><%= msg %></p>
                            <% }); %>
                        <% } else { %>
                            <p><%= success_msg %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <% if (Array.isArray(error_msg)) { %>
                            <% error_msg.forEach(function(msg) { %>
                                <p><%= msg %></p>
                            <% }); %>
                        <% } else { %>
                            <p><%= error_msg %></p>
                        <% } %>
                    </div>
                </div>
            <% } %>
            
            <form class="auth-form" method="POST" action="/users/login">
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control" 
                        value="<%= typeof email !== 'undefined' ? email : '' %>"
                        required
                    >
                </div>
                
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-control" 
                        required
                    >
                </div>
                
                <div class="form-options">
                    <label class="checkbox-label">
                        <input type="checkbox" name="remember">
                        <span class="checkmark"></span>
                        Remember me
                    </label>
                    <a href="/users/forgot-password" class="forgot-link">Forgot password?</a>
                </div>
                
                <button type="submit" class="btn btn-primary btn-full">Sign In</button>
            </form>
            
            <div class="auth-footer">
                <p>Don't have an account? <a href="/users/register" class="auth-link">Create one here</a></p>
            </div>
        </div>
        
        <div class="auth-features">
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-music"></i>
                </div>
                <h3>Access Thousands of Hymns</h3>
                <p>Discover beautiful Orthodox hymns in multiple Ethiopian languages</p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Save Your Favorites</h3>
                <p>Create personalized collections of your most loved hymns</p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <h3>Get Notified</h3>
                <p>Receive updates when new hymns are added to the platform</p>
            </div>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>