<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= hymn.title %> - Hymns</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Social Media Meta Tags -->
    <meta property="og:title" content="<%= hymn.title %> - Ethiopian Orthodox Hymns">
    <meta property="og:description" content="<%= hymn.description %>">
    <meta property="og:type" content="music.song">
    <meta property="og:url" content="<%= currentUrl %>">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= hymn.title %>">
    <meta name="twitter:description" content="<%= hymn.description %>">
    
    <style>
        /* Comment and Rating Styles */
        .comments-section {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #eee;
        }

        .comment-form {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .rating-stars {
            display: flex;
            gap: 5px;
            margin-bottom: 15px;
        }

        .rating-stars input {
            display: none;
        }

        .rating-stars label {
            font-size: 24px;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }

        .rating-stars label:hover,
        .rating-stars input:checked ~ label {
            color: #ffc107;
        }

        .rating-stars input:checked ~ label {
            color: #ffc107;
        }

        .comments-list {
            margin-top: 20px;
        }

        .comment-item {
            background: white;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .comment-user {
            font-weight: 500;
            color: #333;
        }

        .comment-rating {
            color: #ffc107;
        }

        .comment-date {
            color: #6c757d;
            font-size: 0.9em;
        }

        .comment-content {
            color: #333;
            line-height: 1.5;
        }

        .no-comments {
            text-align: center;
            color: #6c757d;
            padding: 40px 0;
        }

        .flash-messages {
            margin-bottom: 20px;
        }

        .flash-message {
            padding: 12px 15px;
            border-radius: 4px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .flash-message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .flash-message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">
                    <img src="/assets/logo.png" alt="Hymns Logo" class="logo">
                    <span>Hymns</span>
                </a>
            </div>
            
            <div class="nav-search">
                <form action="/search" method="GET">
                    <div class="search-box">
                        <input type="text" name="q" placeholder="Search hymns..." id="search-input">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </div>
                </form>
            </div>
            
            <div class="nav-menu">
                <a href="/" class="nav-link">Home</a>
                <div class="nav-dropdown">
                    <a href="#" class="nav-link">Languages <i class="fas fa-chevron-down"></i></a>
                    <div class="dropdown-content">
                        <a href="/amharic/worship">Amharic</a>
                        <a href="/oromo/worship">Afan Oromo</a>
                        <a href="/tigrigna/worship">Tigrigna</a>
                        <a href="/english/worship">English</a>
                    </div>
                </div>
                <% if (user && user.isAdmin) { %>
                    <a href="/admin" class="nav-link">Admin</a>
                <% } %>
                <% if (user) { %>
                    <a href="/users/profile" class="nav-link">Profile</a>
                    <a href="/users/logout" class="nav-link">Logout</a>
                <% } else { %>
                    <a href="/users/login" class="nav-link">Login</a>
                    <a href="/users/register" class="nav-link btn-primary">Sign Up</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Flash Messages -->
        <% if (success_msg && success_msg.length > 0) { %>
            <div class="flash-message success">
                <i class="fas fa-check-circle"></i>
                <span><%= success_msg %></span>
            </div>
        <% } %>

        <% if (error_msg && error_msg.length > 0) { %>
            <div class="flash-message error">
                <i class="fas fa-exclamation-circle"></i>
                <span><%= error_msg %></span>
            </div>
        <% } %>

        <div class="hymn-detail">
            <div class="breadcrumb">
                <a href="/">Home</a> > 
                <a href="/<%= hymn.hymnLanguage %>/<%= hymn.category %>">
                    <%= hymn.hymnLanguage.charAt(0).toUpperCase() + hymn.hymnLanguage.slice(1) %> 
                    <%= hymn.category.charAt(0).toUpperCase() + hymn.category.slice(1) %>
                </a> > 
                <span><%= hymn.title %></span>
            </div>
            
            <div class="hymn-header">
                <h1><%= hymn.title %></h1>
                <div class="hymn-meta">
                    <span class="language-badge">
                        <%= hymn.hymnLanguage.charAt(0).toUpperCase() + hymn.hymnLanguage.slice(1) %>
                    </span>
                    <span class="category-badge">
                        <%= hymn.category.charAt(0).toUpperCase() + hymn.category.slice(1) %>
                    </span>
                    <span><i class="fas fa-play"></i> <%= hymn.plays || 0 %> plays</span>
                    <span><i class="fas fa-download"></i> <%= hymn.downloads || 0 %> downloads</span>
                    <span><i class="fas fa-star"></i> <%= hymn.rating ? hymn.rating.toFixed(1) : '0.0' %> (<%= hymn.ratingCount || 0 %>)</span>
                </div>
            </div>
            
            <div class="hymn-content">
                <div class="audio-section">
                    <div class="audio-player">
                        <audio id="hymn-audio" src="<%= hymn.audioFile %>" preload="metadata"></audio>
                        <div class="player-controls">
                            <button class="play-btn" id="play-btn">
                                <i class="fas fa-play"></i>
                            </button>
                            <div class="progress-bar" id="progress-bar">
                                <div class="progress" id="progress"></div>
                            </div>
                            <div class="time-display">
                                <span class="current-time" id="current-time">0:00</span>
                                <span class="duration" id="duration">0:00</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="action-buttons">
                        <a href="/hymns/<%= hymn._id %>/download" class="btn btn-primary" onclick="trackDownload('<%= hymn._id %>')">
                            <i class="fas fa-download"></i> Download MP3
                        </a>
                        
                        <% if (user) { %>
                            <button class="btn btn-secondary favorite-btn" data-hymn-id="<%= hymn._id %>">
                                <i class="far fa-heart"></i> Add to Favorites
                            </button>
                        <% } else { %>
                            <a href="/users/login" class="btn btn-secondary">
                                <i class="far fa-heart"></i> Login to Favorite
                            </a>
                        <% } %>
                        
                        <!-- Social Share Buttons -->
                        <div class="share-buttons">
                            <span class="share-label">Share:</span>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(currentUrl) %>" 
                               target="_blank" class="share-btn facebook" title="Share on Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent(currentUrl) %>&text=<%= encodeURIComponent(hymn.title) %>" 
                               target="_blank" class="share-btn twitter" title="Share on Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://wa.me/?text=<%= encodeURIComponent(hymn.title + ' - ' + currentUrl) %>" 
                               target="_blank" class="share-btn whatsapp" title="Share on WhatsApp">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                            <a href="https://t.me/share/url?url=<%= encodeURIComponent(currentUrl) %>&text=<%= encodeURIComponent(hymn.title) %>" 
                               target="_blank" class="share-btn telegram" title="Share on Telegram">
                                <i class="fab fa-telegram"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="description-section">
                    <h2>Description</h2>
                    <p><%= hymn.description %></p>
                </div>
                
                <div class="lyrics-section">
                    <h2>Lyrics</h2>
                    <div class="lyrics-content">
                        <pre><%= hymn.lyrics %></pre>
                    </div>
                </div>

                <!-- Comments and Ratings Section -->
                <div class="comments-section">
                    <h2>Comments & Ratings</h2>
                    
                    <!-- Comment Form -->
                    <% if (user) { %>
                        <div class="comment-form">
                            <h3>Leave a Comment and Rating</h3>
                            <form action="/hymns/<%= hymn._id %>/comments" method="POST">
                                <div class="form-group">
                                    <label>Your Rating:</label>
                                    <div class="rating-stars">
                                        <input type="radio" id="star5" name="rating" value="5" required>
                                        <label for="star5"><i class="fas fa-star"></i></label>
                                        <input type="radio" id="star4" name="rating" value="4">
                                        <label for="star4"><i class="fas fa-star"></i></label>
                                        <input type="radio" id="star3" name="rating" value="3">
                                        <label for="star3"><i class="fas fa-star"></i></label>
                                        <input type="radio" id="star2" name="rating" value="2">
                                        <label for="star2"><i class="fas fa-star"></i></label>
                                        <input type="radio" id="star1" name="rating" value="1">
                                        <label for="star1"><i class="fas fa-star"></i></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="content">Your Comment:</label>
                                    <textarea name="content" id="content" rows="4" placeholder="Share your thoughts about this hymn..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="comment-form">
                            <p><a href="/users/login" class="btn btn-primary">Log in</a> to leave a comment and rating.</p>
                        </div>
                    <% } %>

                    <!-- Comments List -->
                    <div class="comments-list">
                        <h3>User Comments (<%= comments.length %>)</h3>
                        <% if (comments.length > 0) { %>
                            <% comments.forEach(function(comment) { %>
                                <div class="comment-item">
                                    <div class="comment-header">
                                        <span class="comment-user">
                                            <i class="fas fa-user"></i>
                                            <%= comment.user.username %>
                                        </span>
                                        <div class="comment-rating">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= comment.rating ? 'filled' : '' %>"></i>
                                            <% } %>
                                            (<%= comment.rating %>/5)
                                        </div>
                                    </div>
                                    <div class="comment-content">
                                        <%= comment.content %>
                                    </div>
                                    <div class="comment-date">
                                        <i class="fas fa-clock"></i>
                                        <%= comment.createdAt.toLocaleDateString() %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="no-comments">
                                <i class="fas fa-comments"></i>
                                <p>No comments yet. Be the first to comment!</p>
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <% if (relatedHymns && relatedHymns.length > 0) { %>
                    <div class="related-hymns">
                        <h2>Related Hymns</h2>
                        <div class="hymns-grid">
                            <% relatedHymns.forEach(function(relatedHymn) { %>
                                <div class="hymn-card">
                                    <div class="hymn-image">
                                        <div class="language-badge">
                                            <%= relatedHymn.hymnLanguage.charAt(0).toUpperCase() + relatedHymn.hymnLanguage.slice(1) %>
                                        </div>
                                        <i class="fas fa-music"></i>
                                    </div>
                                    <div class="hymn-content">
                                        <h3><a href="/hymns/<%= relatedHymn._id %>"><%= relatedHymn.title %></a></h3>
                                        <p><%= relatedHymn.description.substring(0, 100) %>...</p>
                                        <div class="hymn-meta">
                                            <span><i class="fas fa-play"></i> <%= relatedHymn.plays || 0 %></span>
                                            <span><i class="fas fa-star"></i> <%= relatedHymn.rating ? relatedHymn.rating.toFixed(1) : '0.0' %></span>
                                        </div>
                                        <div class="hymn-actions">
                                            <a href="/hymns/<%= relatedHymn._id %>" class="btn btn-primary">Listen</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-logo">
                        <img src="/assets/logo.png" alt="Hymns Logo">
                        <span>Hymns</span>
                    </div>
                    <p>Sharing the beauty of Ethiopian Orthodox hymns with the world.</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Hymns Project. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    <script>
        // Audio player functionality
        document.addEventListener('DOMContentLoaded', function() {
            const audio = document.getElementById('hymn-audio');
            const playBtn = document.getElementById('play-btn');
            const progress = document.getElementById('progress');
            const currentTime = document.getElementById('current-time');
            const duration = document.getElementById('duration');
            const progressBar = document.getElementById('progress-bar');

            // Format time function
            function formatTime(seconds) {
                if (isNaN(seconds)) return '0:00';
                const mins = Math.floor(seconds / 60);
                const secs = Math.floor(seconds % 60);
                return mins + ':' + (secs < 10 ? '0' : '') + secs;
            }

            // Initialize audio player when metadata is loaded
            audio.addEventListener('loadedmetadata', function() {
                console.log('Audio metadata loaded');
                duration.textContent = formatTime(audio.duration);
                
                audio.addEventListener('timeupdate', function() {
                    const percent = (audio.currentTime / audio.duration) * 100;
                    progress.style.width = percent + '%';
                    currentTime.textContent = formatTime(audio.currentTime);
                });

                // Play/Pause functionality
                playBtn.addEventListener('click', function() {
                    if (audio.paused) {
                        audio.play().then(() => {
                            playBtn.innerHTML = '<i class="fas fa-pause"></i>';
                        }).catch(error => {
                            console.error('Error playing audio:', error);
                            alert('Error playing audio. Please check the audio file.');
                        });
                    } else {
                        audio.pause();
                        playBtn.innerHTML = '<i class="fas fa-play"></i>';
                    }
                });

                // Seek functionality
                progressBar.addEventListener('click', function(e) {
                    const rect = this.getBoundingClientRect();
                    const clickX = e.clientX - rect.left;
                    const width = this.offsetWidth;
                    const seekTime = (clickX / width) * audio.duration;
                    audio.currentTime = seekTime;
                });

                // Reset when audio ends
                audio.addEventListener('ended', function() {
                    playBtn.innerHTML = '<i class="fas fa-play"></i>';
                    progress.style.width = '0%';
                    currentTime.textContent = '0:00';
                });
            });

            // Handle audio errors
            audio.addEventListener('error', function(e) {
                console.error('Audio error:', e);
                console.log('Audio source:', audio.src);
                playBtn.disabled = true;
                playBtn.innerHTML = '<i class="fas fa-exclamation-triangle"></i>';
                playBtn.title = 'Error loading audio file';
            });

            // Try to load audio if metadata isn't loaded immediately
            setTimeout(() => {
                if (audio.readyState >= 1) { // HAVE_ENOUGH_DATA
                    audio.dispatchEvent(new Event('loadedmetadata'));
                }
            }, 1000);

            // Star rating interaction
            const starInputs = document.querySelectorAll('.rating-stars input');
            starInputs.forEach((input, index) => {
                input.addEventListener('change', function() {
                    // Update visual state of stars
                    const labels = document.querySelectorAll('.rating-stars label');
                    labels.forEach((label, labelIndex) => {
                        if (labelIndex >= index) {
                            label.style.color = '#ffc107';
                        }
                    });
                });
            });
        });

        // Track download
        function trackDownload(hymnId) {
            fetch(`/hymns/${hymnId}/download`, { method: 'GET' })
                .catch(err => console.log('Download tracked'));
        }
    </script>
</body>
</html>