<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users - Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-sidebar">
            <div class="admin-brand">
                <img src="/assets/logo.png" alt="Hymns Logo" onerror="this.style.display='none'">
                <span>Admin Panel</span>
            </div>
            
            <nav class="admin-nav">
                <a href="/admin" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/admin/hymns" class="nav-item">
                    <i class="fas fa-music"></i>
                    Manage Hymns
                </a>
                <a href="/admin/hymns/add" class="nav-item">
                    <i class="fas fa-plus"></i>
                    Add New Hymn
                </a>
                <a href="/admin/users" class="nav-item active">
                    <i class="fas fa-users"></i>
                    Manage Users
                </a>
                <a href="/admin/comments" class="nav-item">
                    <i class="fas fa-comments"></i>
                    Moderate Comments
                </a>
                <a href="/" class="nav-item">
                    <i class="fas fa-home"></i>
                    Back to Site
                </a>
                <a href="/users/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </div>
        
        <div class="admin-main">
            <div class="admin-header">
                <h1>Manage Users</h1>
                <a href="/admin" class="btn btn-outline">Back to Dashboard</a>
            </div>

            <% if (success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <p><%= success_msg %></p>
                    </div>
                </div>
            <% } %>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <p><%= error_msg %></p>
                    </div>
                </div>
            <% } %>
            
            <div class="admin-content">
                <div class="content-header">
                    <h2>All Users (<%= users.length %>)</h2>
                </div>
                
                <% if (users.length > 0) { %>
                    <div class="hymns-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Admin</th>
                                    <th>Subscribed</th>
                                    <th>Favorites</th>
                                    <th>Joined</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                    <tr>
                                        <td>
                                            <div class="hymn-title">
                                                <i class="fas fa-user"></i>
                                                <div>
                                                    <strong><%= user.username || 'N/A' %></strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= user.email %></td>
                                        <td>
                                            <% if (user.isAdmin) { %>
                                                <span class="featured-badge">Yes</span>
                                            <% } else { %>
                                                <span class="not-featured">No</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (user.isSubscribed) { %>
                                                <span class="featured-badge">Yes</span>
                                            <% } else { %>
                                                <span class="not-featured">No</span>
                                            <% } %>
                                        </td>
                                        <td><%= user.favorites ? user.favorites.length : 0 %></td>
                                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <div class="table-actions">
                                                <form action="/admin/users/toggle-admin/<%= user._id %>" method="POST" class="inline-form">
                                                    <button type="submit" class="btn-icon" title="<%= user.isAdmin ? 'Remove Admin' : 'Make Admin' %>">
                                                        <i class="fas <%= user.isAdmin ? 'fa-user-times' : 'fa-user-shield' %>"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-users"></i>
                        <h3>No users found</h3>
                        <p>No users are registered in the system yet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <style>
        .featured-badge {
            background: #27ae60;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
        }
        
        .not-featured {
            color: #7f8c8d;
            font-size: 0.8rem;
        }
        
        .inline-form {
            display: inline;
        }
    </style>
</body>
</html>