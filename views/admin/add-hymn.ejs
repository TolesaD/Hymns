<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Hymn - Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-sidebar">
            <div class="admin-brand">
                <img src="/assets/logo.png" alt="Hymns Logo" onerror="this.style.display='none'">
                <span>Admin Panel</span>
            </div>
            
            <nav class="admin-nav">
                <a href="/admin" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/admin/hymns" class="nav-item">
                    <i class="fas fa-music"></i>
                    Manage Hymns
                </a>
                <a href="/admin/hymns/add" class="nav-item active">
                    <i class="fas fa-plus"></i>
                    Add New Hymn
                </a>
                <a href="/admin/users" class="nav-item">
                    <i class="fas fa-users"></i>
                    Manage Users
                </a>
                <a href="/admin/comments" class="nav-item">
                    <i class="fas fa-comments"></i>
                    Moderate Comments
                </a>
                <a href="/" class="nav-item">
                    <i class="fas fa-home"></i>
                    Back to Site
                </a>
                <a href="/users/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </div>
        
        <div class="admin-main">
            <div class="admin-header">
                <h1>Add New Hymn</h1>
                <a href="/admin/hymns" class="btn btn-outline">Back to Hymns</a>
            </div>

            <div class="admin-content">
                <!-- REPLACED FLASH MESSAGES WITH INCLUDE -->
                <%- include('../partials/flash-messages') %>

                <form method="POST" action="/admin/hymns/add" class="hymn-form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="form-label">Title *</label>
                        <input type="text" name="title" class="form-control" required 
                               value="<%= typeof title !== 'undefined' ? title : '' %>"
                               placeholder="Enter hymn title">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Description *</label>
                        <textarea name="description" class="form-control" rows="3" required
                                  placeholder="Brief description of the hymn"><%= typeof description !== 'undefined' ? description : '' %></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Language *</label>
                            <select name="hymnLanguage" class="form-control" required>
                                <option value="">Select Language</option>
                                <option value="amharic" <%= (typeof hymnLanguage !== 'undefined' && hymnLanguage === 'amharic') ? 'selected' : '' %>>Amharic</option>
                                <option value="oromo" <%= (typeof hymnLanguage !== 'undefined' && hymnLanguage === 'oromo') ? 'selected' : '' %>>Afan Oromo</option>
                                <option value="tigrigna" <%= (typeof hymnLanguage !== 'undefined' && hymnLanguage === 'tigrigna') ? 'selected' : '' %>>Tigrigna</option>
                                <option value="english" <%= (typeof hymnLanguage !== 'undefined' && hymnLanguage === 'english') ? 'selected' : '' %>>English</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Category *</label>
                            <select name="category" class="form-control" required>
                                <option value="">Select Category</option>
                                <option value="worship" <%= (typeof category !== 'undefined' && category === 'worship') ? 'selected' : '' %>>Worship</option>
                                <option value="praise" <%= (typeof category !== 'undefined' && category === 'praise') ? 'selected' : '' %>>Praise</option>
                                <option value="thanksgiving" <%= (typeof category !== 'undefined' && category === 'thanksgiving') ? 'selected' : '' %>>Thanksgiving</option>
                                <option value="slow" <%= (typeof category !== 'undefined' && category === 'slow') ? 'selected' : '' %>>Slow Hymns</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Lyrics *</label>
                        <textarea name="lyrics" class="form-control" rows="10" required 
                                  placeholder="Enter the complete hymn lyrics"><%= typeof lyrics !== 'undefined' ? lyrics : '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Audio File *</label>
                        <div class="file-upload">
                            <input type="file" name="audioFile" class="form-control" required
                                   accept="audio/mp3,audio/wav,audio/mpeg,audio/*">
                            <small class="form-help">Supported formats: MP3, WAV. Max size: 10MB</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="featured" <%= (typeof featured !== 'undefined' && featured) ? 'checked' : '' %>>
                            <span class="checkmark"></span>
                            Feature this hymn on homepage
                        </label>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Hymn
                        </button>
                        <a href="/admin/hymns" class="btn btn-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.hymn-form');
            
            form.addEventListener('submit', function(e) {
                const title = form.querySelector('input[name="title"]').value.trim();
                const description = form.querySelector('textarea[name="description"]').value.trim();
                const language = form.querySelector('select[name="hymnLanguage"]').value;
                const category = form.querySelector('select[name="category"]').value;
                const lyrics = form.querySelector('textarea[name="lyrics"]').value.trim();
                const audioFile = form.querySelector('input[name="audioFile"]').value;
                
                if (!title || !description || !language || !category || !lyrics || !audioFile) {
                    e.preventDefault();
                    alert('Please fill in all required fields marked with *');
                    return false;
                }
            });
        });
    </script>
</body>
</html>