<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="admin-container">
        <div class="admin-sidebar">
            <div class="admin-brand">
                <img src="/assets/logo.png" alt="Hymns Logo">
                <span>Admin Panel</span>
            </div>
            
            <nav class="admin-nav">
                <a href="/admin" class="nav-item">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/admin/hymns" class="nav-item">
                    <i class="fas fa-music"></i>
                    Manage Hymns
                </a>
                <a href="/admin/hymns/add" class="nav-item">
                    <i class="fas fa-plus"></i>
                    Add New Hymn
                </a>
                <a href="/admin/users" class="nav-item">
                    <i class="fas fa-users"></i>
                    Manage Users
                </a>
                <a href="/admin/comments" class="nav-item active">
                    <i class="fas fa-comments"></i>
                    Moderate Comments
                </a>
                <a href="/" class="nav-item">
                    <i class="fas fa-home"></i>
                    Back to Site
                </a>
                <a href="/users/logout" class="nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </nav>
        </div>
        
        <div class="admin-main">
            <div class="admin-header">
                <h1>Moderate Comments</h1>
                <a href="/admin" class="btn btn-outline">Back to Dashboard</a>
            </div>

            <% if (success_msg && success_msg.length > 0) { %>
                <div class="flash-message success">
                    <div class="container">
                        <i class="fas fa-check-circle"></i>
                        <span><%= success_msg %></span>
                    </div>
                </div>
            <% } %>

            <% if (error_msg && error_msg.length > 0) { %>
                <div class="flash-message error">
                    <div class="container">
                        <i class="fas fa-exclamation-circle"></i>
                        <span><%= error_msg %></span>
                    </div>
                </div>
            <% } %>
            
            <div class="admin-content">
                <h2>Pending Comments (<%= pendingComments.length %>)</h2>
                <% if (pendingComments.length > 0) { %>
                    <div class="comments-grid">
                        <% pendingComments.forEach(function(comment) { %>
                            <div class="comment-card">
                                <div class="comment-header">
                                    <strong>User:</strong> <%= comment.user ? comment.user.username : 'Deleted User' %>
                                    <span class="comment-date"><%= comment.createdAt.toLocaleDateString() %></span>
                                </div>
                                <div class="comment-body">
                                    <p><strong>Hymn:</strong> <%= comment.hymn ? comment.hymn.title : 'Deleted Hymn' %></p>
                                    <p><strong>Comment:</strong> <%= comment.content %></p>
                                    <% if (comment.rating) { %>
                                        <p><strong>Rating:</strong> 
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= comment.rating ? 'filled' : '' %>"></i>
                                            <% } %>
                                            (<%= comment.rating %>/5)
                                        </p>
                                    <% } %>
                                </div>
                                <div class="comment-actions">
                                    <form action="/admin/comments/approve/<%= comment._id %>" method="POST" class="inline-form">
                                        <button type="submit" class="btn btn-primary btn-small">Approve</button>
                                    </form>
                                    <form action="/admin/comments/delete/<%= comment._id %>" method="POST" class="inline-form">
                                        <button type="submit" class="btn btn-danger btn-small" onclick="return confirm('Delete this comment?')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-check-circle"></i>
                        <h3>No pending comments</h3>
                        <p>All comments are moderated and approved.</p>
                    </div>
                <% } %>
                
                <h2>Approved Comments (<%= approvedComments.length %>)</h2>
                <% if (approvedComments.length > 0) { %>
                    <div class="comments-grid">
                        <% approvedComments.forEach(function(comment) { %>
                            <div class="comment-card approved">
                                <div class="comment-header">
                                    <strong>User:</strong> <%= comment.user ? comment.user.username : 'Deleted User' %>
                                    <span class="comment-date"><%= comment.createdAt.toLocaleDateString() %></span>
                                </div>
                                <div class="comment-body">
                                    <p><strong>Hymn:</strong> <%= comment.hymn ? comment.hymn.title : 'Deleted Hymn' %></p>
                                    <p><strong>Comment:</strong> <%= comment.content %></p>
                                    <% if (comment.rating) { %>
                                        <p><strong>Rating:</strong> 
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= comment.rating ? 'filled' : '' %>"></i>
                                            <% } %>
                                            (<%= comment.rating %>/5)
                                        </p>
                                    <% } %>
                                </div>
                                <div class="comment-actions">
                                    <form action="/admin/comments/delete/<%= comment._id %>" method="POST" class="inline-form">
                                        <button type="submit" class="btn btn-danger btn-small" onclick="return confirm('Delete this comment?')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-comments"></i>
                        <h3>No approved comments</h3>
                        <p>Approved comments will appear here.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <style>
        .comments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }
        
        .comment-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background: white;
        }
        
        .comment-card.approved {
            border-left: 4px solid #27ae60;
        }
        
        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
        
        .comment-date {
            font-size: 0.8rem;
            color: #666;
        }
        
        .comment-body p {
            margin: 5px 0;
        }
        
        .comment-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .inline-form {
            display: inline;
        }
        
        .btn-small {
            padding: 5px 10px;
            font-size: 0.8rem;
        }
        
        .fa-star.filled {
            color: #ffc107;
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }
        
        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #ddd;
        }
    </style>
</body>
</html>