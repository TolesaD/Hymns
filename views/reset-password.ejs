<%- include('partials/layout', { title: 'Reset Password - Akotet Hymns' }) -%>

<style>
    .auth-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .auth-card {
        background: var(--white);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-lg);
        padding: 2.5rem;
        width: 100%;
        max-width: 400px;
        margin-right: 2rem;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h1 {
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        font-size: 1.8rem;
    }

    .auth-header p {
        color: var(--text-light);
        margin: 0;
    }

    .auth-form {
        margin-top: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-dark);
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid var(--gray-light);
        border-radius: var(--border-radius);
        font-size: 1rem;
        transition: var(--transition);
        background: var(--white);
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
    }

    .form-help {
        display: block;
        margin-top: 0.25rem;
        font-size: 0.8rem;
        color: var(--text-light);
    }

    .btn-full {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 500;
    }

    .auth-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--gray-light);
        color: var(--text-light);
    }

    .auth-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .auth-link:hover {
        text-decoration: underline;
    }

    .auth-features {
        flex: 1;
        max-width: 400px;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .feature-item {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        color: white;
    }

    .feature-icon {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .feature-item h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
    }

    .feature-item p {
        margin: 0;
        opacity: 0.9;
        font-size: 0.9rem;
        line-height: 1.4;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .auth-container {
            flex-direction: column;
            padding: 1rem;
        }

        .auth-card {
            margin-right: 0;
            margin-bottom: 2rem;
            padding: 2rem;
        }

        .auth-features {
            max-width: 100%;
        }

        .feature-item {
            text-align: center;
        }
    }

    /* Flash Message Styles */
    .flash-messages-container {
        margin-bottom: 1.5rem;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Create New Password</h1>
            <p>Enter your new password below</p>
        </div>
        
        <!-- Flash messages -->
        <div class="flash-messages-container">
            <%- include('partials/flash-messages') %>
        </div>
        
        <form class="auth-form" method="POST" action="/users/reset-password">
            <input type="hidden" name="token" value="<%= token %>">
            
            <div class="form-group">
                <label for="password" class="form-label">New Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-control" 
                    required
                    minlength="6"
                    placeholder="Enter new password"
                >
                <small class="form-help">Minimum 6 characters</small>
            </div>
            
            <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirm New Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    class="form-control" 
                    required
                    placeholder="Confirm new password"
                >
            </div>
            
            <button type="submit" class="btn btn-primary btn-full">
                <i class="fas fa-key"></i> Reset Password
            </button>
        </form>
        
        <div class="auth-footer">
            <p><a href="/users/login" class="auth-link">Back to login</a></p>
        </div>
    </div>
    
    <div class="auth-features">
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h3>Strong Password Tips</h3>
            <p>Use a mix of letters, numbers, and symbols for a secure password.</p>
        </div>
        
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-sync-alt"></i>
            </div>
            <h3>Password Updated</h3>
            <p>After resetting, you'll need to login with your new password.</p>
        </div>
        
        <div class="feature-item">
            <div class="feature-icon">
                <i class="fas fa-user-shield"></i>
            </div>
            <h3>Account Security</h3>
            <p>Keep your password secure and don't share it with anyone.</p>
        </div>
    </div>
</div>

<script>
    // Debug: Check what flash messages are available
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üîç DEBUG Flash Messages on Reset Password Page:');
        console.log('success_msg:', <%= JSON.stringify(success_msg || []) %>);
        console.log('error_msg:', <%= JSON.stringify(error_msg || []) %>);
        console.log('info_msg:', <%= JSON.stringify(info_msg || []) %>);
        console.log('warning_msg:', <%= JSON.stringify(warning_msg || []) %>);

        // Password confirmation validation
        const password = document.getElementById('password');
        const confirmPassword = document.getElementById('confirmPassword');
        const form = document.querySelector('form');
        
        function validatePassword() {
            if (password.value !== confirmPassword.value) {
                confirmPassword.setCustomValidity('Passwords do not match');
                confirmPassword.style.borderColor = '#e74c3c';
            } else {
                confirmPassword.setCustomValidity('');
                confirmPassword.style.borderColor = '#27ae60';
            }
        }
        
        password.addEventListener('input', validatePassword);
        confirmPassword.addEventListener('input', validatePassword);
        
        // Form submission validation
        form.addEventListener('submit', function(e) {
            validatePassword();
            if (password.value !== confirmPassword.value) {
                e.preventDefault();
                alert('Please make sure your passwords match.');
            }
        });
    });
</script>